<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SharepageActivity"
    >
    <RelativeLayout
        android:id="@+id/hedarview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/background_card_menu"
        android:elevation="5dp"
        >
        <View
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:background="@drawable/background_card_menu"
            />
        <ImageView
            android:id="@+id/imgbacks"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/back"
            android:elevation="7dp"
            android:paddingStart="10dp"
            android:layout_marginTop="10dp"
            tools:ignore="ContentDescription,RtlSymmetry" />
        <ImageView
            android:id="@+id/imgpilihan"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/imglogos"
            android:src="@drawable/pilihan"
            tools:ignore="ContentDescription" />
        <ImageView
            android:id="@+id/imglogos"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:src="@drawable/logoh"
            android:layout_marginStart="80dp"
            android:layout_marginTop="5dp"
            tools:ignore="ContentDescription" />
    </RelativeLayout>


    <ImageView
        android:layout_width="401dp"
        android:layout_height="211dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/bgatas"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/backshare"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/back"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/myprofile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:src="@drawable/profile"
        tools:ignore="ContentDescription,ImageContrastCheck" />


    <TextView
        android:id="@+id/nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/myprofile"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/poppinssemibold"
        android:text="Nama Lengkap:"
        android:textSize="13sp"
        tools:ignore="HardcodedText,TextSizeCheck" />
    <EditText
        android:id="@+id/inputnama"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:fontFamily="@font/poppinsregular"
        android:hint="Masukan nama disini"
        android:layout_marginLeft="30dp"
        android:layout_below="@id/nama"
        android:layout_marginRight="30dp"
        android:textSize="12sp"
        tools:ignore="Autofill,HardcodedText,RtlSymmetry,TextFields,TextContrastCheck,VisualLintTextFieldSize"
        />

    <TextView
        android:id="@+id/telepon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/inputnama"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/poppinssemibold"
        android:text="Nomor Telepon:"
        android:textSize="13sp"
        tools:ignore="HardcodedText,TextSizeCheck" />

    <EditText
        android:id="@+id/inputtelepon"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:fontFamily="@font/poppinsregular"
        android:hint="Masukan nomor disini"
        android:layout_marginLeft="30dp"
        android:inputType="number"
        android:layout_marginRight="30dp"
        android:layout_below="@id/telepon"
        android:textSize="12sp"
        tools:ignore="Autofill,HardcodedText,RtlSymmetry,TextFields,TextContrastCheck,VisualLintTextFieldSize"
        />

    <TextView
        android:id="@+id/pesan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/inputtelepon"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/poppinssemibold"
        android:text="Pesan anda:"
        android:textSize="13sp"
        tools:ignore="HardcodedText,TextSizeCheck" />

    <EditText
        android:id="@+id/inputpesan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pesan"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="start|top"
        android:hint="Masukkan pesan di sini..."
        android:inputType="textMultiLine"
        android:lines="2"
        android:maxLines="7"
        android:textSize="12dp"
        android:scrollbars="vertical"
        android:textColorHint="#78909C"
        tools:ignore="Autofill,HardcodedText,VisualLintTextFieldSize" />

    <Button
        android:id="@+id/btnshare"
        android:layout_width="230dp"
        android:layout_height="48dp"
        android:layout_below="@id/inputpesan"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/buton_saya"
        android:fontFamily="@font/poppinssemibold"
        android:text="Kirim Sekarang"
        android:textSize="20dp"
        tools:ignore="HardcodedText,SpUsage,TextSizeCheck" />
    <LinearLayout
        android:id="@+id/openwith"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_below="@id/btnshare"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="125dp"
            android:text="Open With"
            android:layout_below="@id/btnlogin"
            android:fontFamily="@font/poppinssemibold"
            android:textColor="@color/black"
            android:textSize="12sp"
            tools:ignore="HardcodedText,ObsoleteLayoutParam"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/garis"
            android:layout_marginStart="7dp"
            android:layout_marginTop="8dp"
            tools:ignore="ContentDescription" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/garis"
            android:layout_marginStart="-220dp"
            android:layout_marginTop="8dp"
            tools:ignore="ContentDescription" />
    </LinearLayout>

   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@id/openwith"
       android:layout_marginTop="10dp"
       android:layout_centerHorizontal="true"
       >
       <ImageView
           android:id="@+id/togoogle"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/googles"
           tools:ignore="ContentDescription" />
       <ImageView
           android:id="@+id/toig"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/igs"
           tools:ignore="ContentDescription" />
       <ImageView
           android:id="@+id/tolink"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/links"
           tools:ignore="ContentDescription" />
       <ImageView
           android:id="@+id/tofb"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/fbs"
           tools:ignore="ContentDescription" />
   </LinearLayout>
    <RelativeLayout
        android:id="@+id/footerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/background_card_menu"
        android:elevation="10dp"
        >
        <View
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:background="@drawable/background_card_menu"
            />
        <ImageView
            android:id="@+id/imgberandas"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/beranda1"
            android:elevation="7dp"
            android:layout_marginStart="30dp"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/imgkeranjangs"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_marginStart="30dp"
            android:layout_toEndOf="@id/imgberandas"
            android:elevation="7dp"
            android:src="@drawable/keranjang1"
            tools:ignore="ContentDescription,ImageContrastCheck" />
        <ImageView
            android:id="@+id/imgpesans"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/pesans2"
            android:elevation="7dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/imgkeranjangs"
            android:layout_marginStart="30dp"
            tools:ignore="ContentDescription" />
        <ImageView
            android:id="@+id/imgakuns"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/akun1"
            android:elevation="7dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/imgpesans"
            android:layout_marginStart="30dp"
            tools:ignore="ContentDescription" />
    </RelativeLayout>
</RelativeLayout>